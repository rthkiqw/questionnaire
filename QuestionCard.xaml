<UserControl x:Class="questionnaire.QuestionCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:questionnaire"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="380">
    <Grid Background="Transparent">
        <Border Background="WhiteSmoke" CornerRadius="10">
            <Grid Margin="3">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Margin="5" Name="Content" FontSize="19" VerticalAlignment="Center" TextWrapping="Wrap"> Текст вопроса Текст вопроса Текст вопроса Текст вопроса</TextBlock>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button Name="AddAnswer"></Button>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
